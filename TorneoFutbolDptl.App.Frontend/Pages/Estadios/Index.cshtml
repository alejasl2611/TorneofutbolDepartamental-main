@page
@model TorneoFutbolDptl.App.Frontend.Pages.Estadios.IndexModel
@{
}
<h1> Listado de Estadios</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Direccion</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var estadio in Model.estadios)
        {
            <tr>
                <td>@estadio.Nombre</td>
                <td>@estadio.Direccion</td>
                <td>@estadio.Municipio</td>
                <td>
                    <a class="btn btn-secondary" asp-page="./Details" asp-route-id="@estadio.Id">
                    
                    Detalle
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>