@page
@model TorneoFutbolDptl.App.Frontend.Pages.Partidos.IndexModel
@{
}
<h1>Lista de Partidos</h1>
<a class="btn btn-primary" asp-page="./Create" >Agregar Partido</a>
<p></p>
<table class="table">
	<thead>
		<tr>
		<!--	<th scope="col">Id</th>       -->     
			<th scope="col">Equipo local</th>
			<th scope="col">Equipo visitante</th>
			<th scope="col">Goles Equipo visitante</th>
			<th scope="col">Goles Equipo local</th>
			<th scope="col">Fecha/Hora</th>
		<!--<th scope="col">Arbitro</th>-->
		<!--<th scope="col">Estadio</th>-->
		<!--<th scope="col">Novedades</th>-->
		</tr>
	</thead>
	</tbody>
	@foreach (var partido in Model.partidos)
	{
		<tr>
		<!--	<td>@partido.Id</td>          -->  
			<td>@partido.EquipoLocal</td>
			<td>@partido.EquipoVisita</td>
			<td>@partido.EquipoLocalMarca</td>
			<td>@partido.EquipoVisitaMarca</td>
			<td>@partido.FechaHora</td>
		<!--<td>@partido.Arbitro</td>-->
	    <!--<td>@partido.Estadio</td>-->
        <!--<td>@partido.Novedad</td>-->
			<td>
                
				<a class="btn btn-secondary" asp-page="./Details" asp-route-id="@partido.Id">Detalles</a>
				<a class="btn btn-secondary" asp-page="./Edit" asp-route-id="@partido.Id">Editar</a>
				<a class="btn btn-secondary" asp-page="./Delete" asp-route-id="@partido.Id">Eliminar</a>
			</td>
		</tr>
	}
	</tbody>
</table>