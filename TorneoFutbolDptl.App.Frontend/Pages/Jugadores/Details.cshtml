@page
@model TorneoFutbolDptl.App.Frontend.Pages.Jugadores.DetailsModel
@{
}
<h1>Detalles del Jugador</h1>
<table class="table table-striped">
    <tr>
        <th scope="col">Nombre</th>
        <td>@Model.jugador.Nombre</td>
    </tr>
    <tr>
        <th scope="col">Numero</th>
        <td>@Model.jugador.Numero</td>
    </tr>
    <tr>
        <th scope="col">Equipo</th>
        <td>@Model.jugador.Equipo</td>
    </tr>
    <tr>
        <th scope="col">Posicion</th>
        <td>@Model.jugador.Posicion</td>
    </tr>    
    </table>
    <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@Model.jugador.Id">Editar</a>
</table>
<a class="btn btn-secondary" asp-page="./Index">Volver</a>