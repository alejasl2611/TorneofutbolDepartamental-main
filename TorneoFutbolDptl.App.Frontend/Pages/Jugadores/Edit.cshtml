@page
@using TorneoFutbolDptl.App.Dominio
@model TorneoFutbolDptl.App.Frontend.Pages.Jugadores.EditModel
@{
}
<h1>Editar Jugador</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="jugador.Id"></label>
        <input asp-for="jugador.Id" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label asp-for="jugador.Nombre"></label>
        <input asp-for="jugador.Nombre" class="form-control">
        <span asp-validation-for="jugador.Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="jugador.Numero"></label>
        <input asp-for="jugador.Numero" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="jugador.Equipo"></label>
        <input asp-for="jugador.Equipo" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="jugador.Posicion"></label>
        <input asp-for="jugador.Posicion" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">Guardar cambios</button>
</form>
<br>
<a class="btn btn-secondary" asp-page="./Index">Cancelar</a>