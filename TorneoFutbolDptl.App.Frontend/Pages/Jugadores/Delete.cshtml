@page
@using TorneoFutbolDptl.App.Dominio
@model TorneoFutbolDptl.App.Frontend.Pages.Jugadores.DeleteModel
@{
}
<h1>Eliminar Jugador</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="jugador.Id"></label>
        <input asp-for="jugador.Id" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label asp-for="jugador.Nombre"></label>
        <input asp-for="jugador.Nombre" class="form-control" readonly>
        <span asp-validation-for="jugador.Nombre" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Eliminar</button>
</form>
<br>
<a class="btn btn-secondary" asp-page="./Index">Cancelar</a>