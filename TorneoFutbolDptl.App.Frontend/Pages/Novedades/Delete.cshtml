@page
@using TorneoFutbolDptl.App.Dominio
@model TorneoFutbolDptl.App.Frontend.Pages.Novedades.DeleteModel
@{
}
<h1>Eliminar Novedad</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="novedad.Id"></label>
        <input asp-for="novedad.Id" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label asp-for="novedad.GolEquipoLocal"></label>
        <input asp-for="novedad.GolEquipoLocal" class="form-control" readonly>
        <span asp-validation-for="novedad.GolEquipoLocal" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Eliminar</button>
</form>
<br>
<a class="btn btn-secondary" asp-page="./Index">Cancelar</a>